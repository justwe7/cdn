<view class="container f-wing-blank">
  <view class="g-header">
    <view class="m-avatar">
      <open-data type="userAvatarUrl" class="f-width-all f-height-all"></open-data>
    </view>
    <view class="m-user-info">
      <!-- <button>用户授权</button> -->
      <view class="f-fz-40">
        <open-data type="userNickName"></open-data>
      </view>
      <view class="f-fz-32">
        <!-- <open-data type="userCity" lang="zh_CN"></open-data> -->
        <open-data type="userGender" lang="zh_CN"></open-data> /      
        <open-data type="userProvince" lang="zh_CN"></open-data>
      </view>
      <!-- 获取用户昵称 性别 等 -->
    </view>
  </view>
  <button
    class="btn"
    bindtap="onSubscribe"
    hover-class="btn-hover"
  >
    订阅开课提醒
  </button>
  <van-cell-group >
    <van-cell title="消息推送">
      <van-switch slot="right-icon" checked="{{ isPush }}" size="24px" bind:change="onChange" />
    </van-cell>
    <!-- <van-cell title="单元格" value="内容" label="描述信息" border="{{ false }}" /> -->
  </van-cell-group>
</view>